<Page x:Class="FTPP.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTPP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <DataGrid x:Name="UsersGrid" Height="100" VerticalAlignment="Top"/>
        <Button x:Name="ChangeBtn" Height="40px" Margin="0, 90, 0, 0" Click="ChangeBtn_Click" Content="Press"/>
        <TextBox x:Name="UName" Height="30" Margin="0, 170, 0, 0"/>
        <TextBox x:Name="UMail" Height="30" Margin="0, 250, 0, 0"/>
    </Grid>
</Page>
